# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ===================================
# Database Configuration
# ===================================
DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres

# ===================================
# Stripe Payment Processing
# ===================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===================================
# Firebase Authentication
# ===================================
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# ===================================
# Google Gemini AI
# ===================================
GEMINI_API_KEY=...

# ===================================
# Google Maps Platform APIs
# ===================================
# Used for automatic property image retrieval
# Requires: Geocoding API, Street View Static API, Maps Static API
GOOGLE_MAPS_API_KEY=AIza...

# ===================================
# Vercel Blob Storage
# ===================================
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_...

# ===================================
# Application URLs
# ===================================
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
ENVIRONMENT=development

# ===================================
# CORS Configuration
# ===================================
CORS_ORIGINS=http://localhost:3000

# ===================================
# Business Logic Configuration
# ===================================
TRIAL_CREDITS=3
TOKEN_COST_PER_GENERATION=1

# Auto-Reload Configuration
AUTO_RELOAD_MIN_AMOUNT=10
AUTO_RELOAD_MIN_THRESHOLD=1
AUTO_RELOAD_MAX_THRESHOLD=100
AUTO_RELOAD_MAX_FAILURES=3
AUTO_RELOAD_THROTTLE_SECONDS=60

# Generation Configuration
MAX_IMAGE_SIZE_MB=10
MAX_CUSTOM_PROMPT_LENGTH=500
MAX_AREAS_PER_GENERATION=5
GENERATION_TIMEOUT_SECONDS=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
