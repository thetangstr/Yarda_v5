{
  "name": "yarda-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "test:unit": "vitest run --coverage",
    "test:unit:watch": "vitest watch",
    "test:integration": "cd ../backend && pytest tests/integration",
    "test:e2e:local": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:staging": "playwright test --config=playwright.config.staging.ts",
    "test:e2e:production": "playwright test --config=playwright.config.production.ts --grep @smoke",
    "test:all:local": "npm run test:unit && npm run test:integration && npm run test:e2e:local",
    "test:staging": "npm run test:e2e:staging",
    "test:staging:smoke": "npm run test:e2e:staging -- --grep @smoke",
    "test:prod:smoke": "npm run test:e2e:production",
    "test:affected": "npm run test:unit -- --changed",
    "test:coverage": "vitest run --coverage && npx nyc report --reporter=html",
    "test:report": "npx playwright show-report",
    "test:metrics": "node scripts/test-metrics.js",
    "agent:test:fix": "npx claude-code --agent debugging-toolkit:debugger",
    "agent:test:write": "npx claude-code --agent unit-testing:test-automator",
    "agent:deploy": "npx claude-code --agent full-stack-orchestration:deployment-engineer"
  },
  "dependencies": {
    "@stripe/stripe-js": "^4.8.0",
    "@supabase/supabase-js": "^2.79.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "axios": "^1.7.7",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.263.1",
    "next": "15.0.2",
    "next-intl": "^4.5.3",
    "react": "^18.3.1",
    "react-compare-slider": "^3.1.0",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^8",
    "eslint-config-next": "15.0.2",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
